<div class="card-body">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="text-primary">
                <tr>
                    <th>
                        Programme Name
                    </th>
                    <th>
                        Faculty Name
                    </th>
                    <th>
                        College Name
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var programme in ViewBag.Programmes)
                {
                    <tr>
                        <td>
                            @programme.ProgrammeName
                        </td>
                        <td>
                            @foreach (var faculty in ViewBag.faculties)
                            {
                                @if (programme.FacultyId == faculty.FacultyId)
                                {
                                    @faculty.FacultyName
                                }
                            }
                        </td>
                        <td>
                            @foreach (var college in ViewBag.colleges)
                            {
                                @if (programme.CollegeId == college.CollegeId)
                                {
                                    @college.CollegeName
                                }
                            }
                        </td>
                        <td>
                            @foreach (var department in ViewBag.departments)
                            {
                                @if (programme.CollegeId == department.CollegeId)
                                {
                                    @department.DepartmentName
                                }
                            }
                        </td>
                        <td class="text-right">
                            <button class="btn btn-round btn-info btn-icon btn-sm like" data-toggle="modal" data-target="#edit-programme"><i class="now-ui-icons users_single-02"></i></button>
                            <button class="btn btn-round btn-danger btn-icon btn-sm remove"><i class="fa fa-times"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
